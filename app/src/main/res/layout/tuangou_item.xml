<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tuangou_imageview"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/tuangou_bigiv"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView

        android:id="@+id/tuangou_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView

        android:id="@+id/tuangou_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ccccff"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tuangou_tbprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textColor="#ff0000"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/tuangou_bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="2人团"
                android:textColor="#000000"
                />

            <Button
                android:id="@+id/tuangou_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:text="立即开团"
                android:textColor="#ffffff"
                />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>